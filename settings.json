{
	"editor.autoClosingDelete": "always",
	"tabnine.experimentalAutoImports": true,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.colorTheme": "Dark++ Italic",
	// fonts
	"editor.fontFamily": "Fira Code Retina",
	"editor.fontWeight": "550",
	"editor.fontVariations": true,
	"editor.fontSize": 19,
	"editor.letterSpacing": -1,
	// "editor.fontLigatures": true,
	"editor.fontLigatures": "'calt', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'zero', 'onum'",
	"editor.lineHeight": 1.3,
	// inlayHints
	"editor.inlayHints.fontSize": 16,
	"editor.tabSize": 2,
	"editor.autoClosingQuotes": "always",
	"editor.bracketPairColorization.enabled": true,
	"editor.bracketPairColorization.independentColorPoolPerBracketType": true,
	"editor.formatOnPaste": true,
	"editor.autoIndent": "advanced",
	"editor.colorDecorators": true,
	"editor.cursorBlinking": "expand",
	"editor.cursorSmoothCaretAnimation": "on",
	"editor.showFoldingControls": "mouseover",
	"editor.showUnused": true,
	"editor.inlineSuggest.showToolbar": "always",
	"editor.formatOnSave": true,
	"editor.cursorWidth": 3,
	"editor.codeLensFontFamily": "Fira Code Retina",
	"editor.columnSelection": false,
	"editor.fastScrollSensitivity": 6,
	"editor.detectIndentation": false,
	"editor.insertSpaces": false,
	"editor.guides.bracketPairs": true,
	"editor.guides.highlightActiveIndentation": true,
	"editor.wordWrap": "on",
	"editor.renderWhitespace": "boundary",
	"editor.minimap.enabled": false,
	"explorer.compactFolders": false,
	"editor.minimap.renderCharacters": true,
	"editor.unicodeHighlight.ambiguousCharacters": false,
	"editor.glyphMargin": false,
	"editor.smoothScrolling": true,
	"editor.linkedEditing": true,
	"editor.padding.top": 15,

	// files
	"files.autoSave": "afterDelay",
	"files.autoSaveDelay": 200,
	// workbench
	"workbench.activityBar.iconClickBehavior": "focus",
	"workbench.list.smoothScrolling": true,
	"workbench.editor.pinnedTabSizing": "compact",
	"workbench.startupEditor": "none",
	"workbench.sideBar.location": "right",
	"redhat.telemetry.enabled": false,
	"vs-kubernetes": {
		"vscode-kubernetes.minikube-path-windows": "C:\\Users\\slk55\\.vs-kubernetes\\tools\\minikube\\windows-amd64\\minikube.exe",
		"vscode-kubernetes.helm-path-windows": "C:\\Users\\slk55\\.vs-kubernetes\\tools\\helm\\windows-amd64\\helm.exe"
	},
	"cSpell.language": "en,ru,en-US,ru-RU",
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"prettier.useTabs": true,
	"prettier.semi": true,
	"prettier.jsxSingleQuote": true,
	"prettier.singleQuote": true,
	"prettier.arrowParens": "avoid",
	"cSpell.userWords": ["esbenp", "Parens"],
	"terminal.integrated.fontSize": 16,
	"terminal.integrated.smoothScrolling": true,
	"terminal.integrated.cursorBlinking": true,
	"google-translate.firstLanguage": "ru",
	"cSpell.enabled": true,
	"cSpell.autoFormatConfigFile": false,
	"cSpell.allowCompoundWords": true,
	"google-translate.secondLanguage": "en",
	"liveServer.settings.donotShowInfoMsg": true,
	"explorer.confirmDelete": false,
	"window.zoomLevel": -1,
	"http.proxySupport": "fallback",
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}
